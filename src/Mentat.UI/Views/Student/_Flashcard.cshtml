@using Mentat.Domain.Models

@model FlashCardVM

@Html.HiddenFor(m => m.CardID, new { id = "CardID_" + @ViewData["index"] + "_" + Model.CardID })



<head>
  <!-- Other meta tags and script references -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="/css/styles.css">

</head>


<div id="flashcard-container" class="row bottom-buffer col-sm-12" style="display:inline-block;">
    @Html.TextAreaFor(m => m.CardQuestion, 5, 90, new { @maxLength = "250", disabled = true, id = "CardQuestion_"+ @ViewData["index"] })

    <span class="star @(Model.IsStarred ? "starred" : "")" onclick="toggleStar(this)" data-flashcard-id="@Model.CardID" data-flashcard-index="@ViewData["index"]">
        <i class="fas fa-star"></i>
    </span>


</div>
<div class="row col-sm-12">
    <div class="col-sm-2"></div>
    <a href="javascript:;" onclick="goToPrevious(@ViewData["index"]);"><span class="fa fa-arrow-circle-left fa-3x fsu-maroon-color"></span></a>
    <div class="col-sm-1"></div>
    <div class="vertical-line-center">
        <a href="javascript:;" class="fsu-black-color" id="show-hide_@ViewData["index"]" onclick="toggleShowHideOfFlashCard(@ViewData["index"]);">Show</a>
    </div>
    <div class="col-sm-1"></div>
    <a href="javascript:;" onclick="goToNext(@ViewData["index"]);"><span class="fa fa-arrow-circle-right fa-3x fsu-maroon-color"></span></a>
</div>
<div style="display:none">
    @Html.TextAreaFor(m => m.HiddenCardAnswer, 0, 0, new { @maxLength = "250", disabled = true, id = "HiddenCardAnswer_" + @ViewData["index"] })
</div>


<div class="flashcardsContainer">
    <div class="flashcardCountsBox">
        <div class="flashcardCounts">
            <span>Mastered Flashcards</span><span class="masteredCount">0</span>
        </div>
    </div>

    <div class="flashcardCountsBox">
        <div class="flashcardCounts">
            <span>Learning Flashcards </span><span class="learningCount">0</span>
        </div>
    </div>
</div>


<div class="row top-buffer col-sm-12 light-text">
    @Html.TextAreaFor(m => m.CardAnswerOverlay, 5, 117, new { @maxLength = "250", disabled = true, id = "CardAnswerOverlay_" + @ViewData["index"] })
</div>