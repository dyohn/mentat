<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mentat</title>
    <link rel="stylesheet" href="~/css/fsu-theme.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/toastr.min.css"/>
    <link rel="stylesheet" href="~/css/all.min.css"/>
    <link rel="stylesheet" href="~/css/bootstrap-multiselect.min.css" type="text/css"/>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light mb-3 mt-lg-5">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Mentat</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Mentor" asp-action="Index">Mentor</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Student" asp-action="Index">Student</a>
                        </li>
                    </ul>
                </div>

                <div class="navbar-collapse collapse justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                          <img src="~/images/blank-profile-picture-g235ada478_640.png" width="40" height="40" class="rounded-circle">
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                          <a class="dropdown-item" href="#">Register</a>
                          <a class="dropdown-item" href="#">Log In</a>
                        </div>
                      </li>   
                    </ul>
                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <footer class="page-footer">
        <div class="footer-content">
            <div class="row">
                <div class="col-md-3">
                    <p>Florida State University Panama City<br>
                        4750 Collegiate Drive<br>
                        Panama City, Florida 32405</p>
                </div>

                <div class="col-md-3">
                    <p>FSU Panama City Directory Assistance:<br><a href="tel:+18508724750">(850) 872-4750</a><br><a href="https://my.fsu.edu/" target="_blank" >myFSU</a></p>
                </div>

                <div class="col-md-3">
                    <p>Toll Free:&nbsp;<a href="tel:+18666937872" rel="" target="" title="">(866) 693-7872&nbsp;</a>(MYFSUPC)<br>
                    FSU Panama City <a href="https://pc.fsu.edu/Faculty-Staff" target="_blank" title="">Human Resources</a><br><a href="mailto:hjohnson@pc.fsu.edu">Site Manager</a></p>
                </div>

                <div class="col-md-3">
                    <ul class="socials">
                        <li><a href="https://www.facebook.com/FSUPC" target="_blank" title="Like Florida State Panama City on Facebook"><i class="fa-brands fa-facebook">&nbsp;</i></a></li>
                        <li><a href="https://instagram.com/fsupc/" target="_blank" title="Follow Florida State Panama City on Instagram"><i class="fa-brands fa-instagram">&nbsp;</i></a></li>
                        <li><a href="https://twitter.com/fsupc" target="_blank" title="Follow Florida State Panama City on Twitter"><i class="fa-brands fa-twitter">&nbsp;</i></a></li>
                        <li><a href="https://www.youtube.com/FloridaStatePC" target="_blank" title="Follow Florida State Panama City on Youtube"><i class="fa-brands fa-youtube">&nbsp; </i></a></li>
                        <li><a href="https://www.pinterest.com/fsupc" target="_blank" title="Follow Florida State Panama City on Pinterest"><i class="fa-brands fa-pinterest">&nbsp; </i></a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="footer-content2">
            <div class="row">
                <div class="col-md-3">
                    <p>© Florida State University<br>
                        Tallahassee, FL 32306</p>
                </div>

                <div class="col-md-3">
                    <p><a href="https://directory.fsu.edu/" target="_blank">FSU Directory Assistance</a>
                       <br>
                       <a href="http://fsu.edu/misc/comments.html" target="_blank">Questions or Comments</a>
                    </p>
                </div>

                 <div class="col-md-3">
                    <p><a href="http://fsu.edu/misc/copyright.html" target="_blank">Copyright</a>
                </div>
            </div>
        </div>
        
        <div class="Privacy">        
            <div class="Mentat-privacy">
               &copy; @DateTime.Now.Year - Mentat.UI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
         </div>

    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/toastr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script type="text/javascript" src="~/js/bootstrap-multiselect.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
