@model Mentat.UI.ViewModels.SetViewModel

@{
    ViewData["Title"] = "Sets";
}

<h1>Your Sets</h1>

<p>
    <a asp-action="AddSet">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var set in Model.Sets)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => set.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => set.Description)
                </td>
                <td>
                    <form asp-action="StudySet" asp-route-id="@set.Id">
                        <input type="submit" value="Study" class="btn" />
                    </form>
                    @Html.ActionLink("Edit", "AddEditCard", new { id = set.Id }) |
                    <form asp-action="Delete" asp-route-id="@set.Id">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
